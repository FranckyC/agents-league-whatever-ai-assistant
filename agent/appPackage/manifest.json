{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.24/MicrosoftTeams.schema.json",
    "manifestVersion": "1.24",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "developer": {
        "name": "By Franck Cornu",
        "websiteUrl": "https://blog.franckcornu.com/",
        "privacyUrl": "https://blog.franckcornu.com/",
        "termsOfUseUrl": "https://blog.franckcornu.com/"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Whatever AI Assistant",
        "full": "Whatever AI Assistant ${{APP_NAME_SUFFIX}}"
    },
    "description": {
        "short": "\"One agent to greet them, many agents behind the scenes\" ðŸš€",
        "full": "This agent has been developed as part of the Microsoft Agents League Contest held in February 2026. It demonstrates a multi agents system answering questions and HR and IT leveraging Microsoft Foundry agent service, Microsoft 365 Copilot, Agents 365 SDK, and MCP server."
    },
    "accentColor": "#FFFFFF",
    "copilotAgents": {
        "customEngineAgents": [
            {
                "type": "bot",
                "id": "${{BOT_ID}}"
            }
        ]
    },
    "bots": [
        {
            "botId": "${{BOT_ID}}",
            "scopes": [
                "copilot",
                "personal",
                "team"
            ],
            "supportsFiles": false,
            "isNotificationOnly": false,
            "commandLists": [
                {
                    "scopes": [
                        "copilot",
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "BYOD",
                            "description": "What is the BYOD policy?"
                        },
                        {
                            "title": "Passwords",
                            "description": "What is the password policy?"
                        },
                        {
                            "title": "Leaves and absences",
                            "description": "How do I apply for a leave?"
                        },
                        {
                            "title": "Performance evaluation",
                            "description": "When is the performance evaluation?"
                        }
                    ]
                }
            ]
        }
    ],
    "composeExtensions": [],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{BOT_DOMAIN}}",
        "token.botframework.com",
        "login.microsoftonline.com",
        "global.consent.azure-apim.net"
    ]
}